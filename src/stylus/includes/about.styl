.Hero__about
	position relative
	&__img
		width 140px
		overflow hidden
		height 140px
		border-radius 50%
		 
	&__lead
		bottom 20%
		color primary_color
		font-size 14px
		max-width 300px
		position absolute
		left 100px
		z-index 10
		
		p
			font-weight 600
		
.Skills
	&__list
		border-left solid 3px primary_color
		padding-left 10px
	&__preview
		margin-top -30px
	
@media only screen and (min-width : 610px)
	.Hero__about
		&__lead
			font-size 22px
			max-width 350px

@media only screen and (min-width : 910px)
	.Hero__about
		&__lead
			font-size 24px
			max-width 660px
			bottom 15%
			
