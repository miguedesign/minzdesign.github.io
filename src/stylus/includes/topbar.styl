.topbar
	background dark_color
	position fixed
	top 0
	left 0
	width 100%
	height 2px
	z-index 3000
	&::before
		content ''
		background-color black_color
		display block
		height 100%
		width 1px
		position absolute
		top 0
		left 0
		z-index 3
	&.is-loading
		&::before
			animation progress 2s infinite ease-in-out

.Header	
	transition all .3s linear
	padding 20px 10px 0
	&.is-scrolled
		padding-top 0
		background rgba(white_color, .95)
	&-Menu
		&-Link
			font-size 14px
			font-weight 600
			color dark_color
			padding 5px 10px
			letter-spacing 2px
			&.is-current
				color primary_color
		&-Logo
			background dark_color
			border-radius 50%
			display inline-block
			height 32px 
			width 32px 
			transition_all(.3s)
			position relative
			overflow hidden
			&::before
				background white_color
				border-radius 50%
				content ''
				display block
				height 50%
				left 8px
				position absolute
				top 8px
				transition_all(.3s)
				width 50%
			span
				display none


@keyframes progress
	0%
		left 0
		width 1px
	50%
		right 0
		left 0
		width 100%
	51%
		width 100%
		left initial
	75%
		width 1px
		right 0
				


@media only screen and (min-width : 1100px)
	.topbar
		padding 0
	.Header	
		&-Menu
			&-Link
				margin 20px 
				padding 10px
				position relative
				&:last-child
					margin-right 0
				&::after
					content ''
					background primary_color
					width 0
					position absolute
					bottom 0
					left 50%
					height 2px
					display block
					transition_all(.3s)
				&:hover
					color primary_color
					&::after
						left 0
						width 100%
			&-Logo
				height 40px 
				width 40px 
				position relative
				&::before
					left 10px
					top 10px
				&::after
					background-image url('data:image/png;base64,')
					background-position center
					background-size 100%
					background-repeat no-repeat
					display block
					width 36px
					height 36px
					content ''
					position absolute
					top 4px
					left 2px
					z-index 1
					opacity 0
					transition_all(.3s)
					transform scale(0)
					 
				&:hover
					&::before
						width 0
						height 0
						left 50%
						top 50%
					&::after
						opacity 1
						transform scale(1)
						












