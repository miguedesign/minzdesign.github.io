.topbar
	background primary_color
	position fixed
	top 0
	left 0
	width 100%
	height 2px
	z-index 3000
	&::before
		content ''
		background-color dark_color
		display block
		height 100%
		width 1px
		position absolute
		top 0
		left 0
		z-index 3
	&.is-loading
		&::before
			animation progress 2s infinite ease-in-out
	

@keyframes progress
	0%
		left 0
		width 1px
	50%
		right 0
		left 0
		width 100%
	51%
		width 100%
		left initial
	75%
		width 1px
		right 0
				


