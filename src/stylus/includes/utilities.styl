//---#Loader
#preloader
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 12000
	background #fff
	&::before
		content ''
		width 1px
		height 3px
		background-color dark_color
		position absolute
		animation progressBar 2s ease-in-out
		z-index 3
	&::after
		content ''
		width 1px
		height 100%
		background-color grey_color_1
		position absolute
		animation progressBar 2s ease-in-out
		z-index 2

@keyframes progressBar
	0%
		left 0
		width 1px
	50%
		left 0
		right 0
		width 100%
	51%
		width 100%
		left initial
	100%
		width 1px
		right 0
		

		 
