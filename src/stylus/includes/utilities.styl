.t-link
	color primary_color
	display inline
	text-decoration none
	transition ease-out .3s
	word-wrap break-word
	font-weight 700
	position relative
	&::after
		content ''
		display block 
		width 100%
		position absolute
		height 3px
		background rgba(primary_color, .5)
		bottom 0
		left 0
		z-index -1
		transition_all(.3s)
	&:hover
		color primary_dark_color
		&::after
			height 100%
	&-white
		color white_color
	&-grey
		color grey_color_3
		font-weight 400
		&::after
			background rgba(grey_color_3, .5)	
			height 2px
		&:hover
			color dark_color

