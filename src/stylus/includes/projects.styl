@media only screen and (min-width : 610px)
	.Project
		&-Step
			&-Number
				font-size 6em
		&-Yustapos		
			&-col
				&.col-1
					left -5%
				&.col-2
					left 15%
				&.col-3
					left 45%

@media only screen and (min-width : 910px)
	.Projects
		&__link
			width auto
			min-height 50vh
			&__icon
				display none
	.Project
		&-Yustapos		
			&-col
				width 500px
				&.col-1
					top 0
					left 0
				&.col-2
					top 50px
					left 25%
				&.col-3
					top 100px
					left 55%
				

@media only screen and (min-width : 1000px) and (orientation: portrait) and (min-height : 1000px)
	.Projects
		&__link
			min-height auto

@media only screen and (min-width : 1100px)
	.Projects
		&__caption
			background transparent
			background-position 1200px center
			background-repeat no-repeat
			background-size 100px
		&__link
			position relative
			margin 0
			width 250px
			height 250px
			min-height 250px
			&::after
				width 95%
				height 100%
				
			&__icon
				display block
				width 120px
				display inline-block
				position absolute
				bottom -30px
				right 0
				opacity 0
				transition_all(.3s)
			&__caption
				bottom -60px
				transition_all(.3s)
				opacity 0
			

			/*
			* To efect hover
			*/
			&-hide-other
				opacity .9
			// 	filter: blur(4px)
			&-show
				shadow_custom(0, 20px, 60px, -5px, .2)
				filter: blur(0px)
			// -------
				
			&:hover
				transform scale(.98)
				&::after
					position absolute
					width 0
					opacity 0
				.Projects
					&__link
						&__caption
							opacity 1
							bottom -30px
						&__icon
							right -40px
							opacity 1
						&__letter
							height 140px
							width 140px
							margin-top -70px
							margin-left -70px
							
				
				
			&>*
				transition_all(.5s)
				


	.Project
		&-Header
			padding 140px 0 80px
		&-Yustapos		
			text-align center
			&-col
				position relative
				width 32%
				display inline-block
				vertical-align top
				margin 0 auto
				&.col-1
				&.col-2
				&.col-3
					left initial
			

		
@media only screen and (min-width : 1400px)
	.Projects
		&__link
			width 340px
			height 340px




	 
