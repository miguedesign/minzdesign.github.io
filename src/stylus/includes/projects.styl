// Lists project home
.Projects
	width 100%
	margin 0 auto
	padding-top 100px
	display inline-block
	 
	&__link
		background-position center
		background-repeat no-repeat
		background-size cover
		display block
		height 240px
		margin 0 auto 50px
		position relative
		width 240px
		&::after
			content ''
			display block
			z-index 1
			background-color rgba(dark_color, .5)
			width 100%
			height 95%
			top 0
			left 0
			transition_all(.3s)
		&__letter
			height 100px
			position absolute
			top 50%
			left 50%
			width 100px
			margin-top -50px
			margin-left -50px
		&__icon
			display block
			width 100px
			display inline-block
			position absolute
			bottom -30px
			right -50px
			transition_all(.3s)
			
		&__caption
			display block
			position absolute
			bottom -30px
			z-index 10
			&__title
				color dark_color
				font-size 16px
				letter-spacing 2px
				font-weight 400
				text-transform uppercase

		/*
		* To efect hover
		*/
		&-hide-other
			opacity 0.2
		&-show
			opacity 1
			
	
			

