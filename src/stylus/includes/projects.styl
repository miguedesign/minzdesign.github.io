@media only screen and (min-width : 910px)
	.Projects
		&__link
			width auto
			min-height 50vh
			&__icon
				display none
		// &__title
		// 	font-size	1.7em
		// &__caption
		// 	font-size	1.5em

@media only screen and (min-width : 1000px) and (orientation: portrait) and (min-height : 1000px)
	.Projects
		background red
		&__link
			min-height auto

@media only screen and (min-width : 1100px)
	.Projects
		&__caption
			background transparent
			background-position 1200px center
			background-repeat no-repeat
			background-size 100px
		&__link
			position relative
			margin 0
			width 250px
			height 250px
			min-height 250px
			&::after
				width 95%
				height 100%
				
			&__icon
				display block
				width 120px
				display inline-block
				position absolute
				bottom -30px
				right 0
				opacity 0
				transition_all(.3s)
			&__caption
				bottom -60px
				transition_all(.3s)
				opacity 0
			

			/*
			* To efect hover
			*/
			&-hide-other
				opacity .9
			// 	filter: blur(4px)
			&-show
				shadow_custom(0, 20px, 60px, -5px, .2)
				filter: blur(0px)
			// -------
				
			&:hover
				transform scale(.98)
				&::after
					position absolute
					width 0
					opacity 0
				.Projects
					&__link
						&__caption
							opacity 1
							bottom -30px
						&__icon
							right -40px
							opacity 1
						&__letter
							height 140px
							width 140px
							margin-top -70px
							margin-left -70px
							
				
				
			&>*
				transition_all(.5s)
				


	.Project
		&__header
			h1
				font-size 130px
			h3 
				font-size 32px
		
@media only screen and (min-width : 1400px)
	.Projects
		&__link
			width 340px
			height 340px




	 
