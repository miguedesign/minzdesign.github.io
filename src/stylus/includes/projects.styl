// Lists project home
.Projects
	width 100%
	margin 0 auto
	padding-top 100px
	display inline-block
	 
	&__link
		background-position center
		background-repeat no-repeat
		background-size cover
		display block
		height 240px
		margin 0 auto 50px
		position relative
		width 240px
		&::after
			content ''
			display block
			z-index 1
			background-color rgba(dark_color, .5)
			width 100%
			height 95%
			top 0
			left 0
			transition_all(.3s)
		&__letter
			height 100px
			position absolute
			top 50%
			left 50%
			width 100px
			margin-top -50px
			margin-left -50px
		&__icon
			display block
			width 100px
			display inline-block
			position absolute
			bottom -30px
			right -50px
			transition_all(.3s)
			
		&__caption
			display block
			position absolute
			bottom -30px
			z-index 10
			&__title
				color dark_color
				font-size 16px
				letter-spacing 2px
				font-weight 400
				text-transform uppercase

		/*
		* To efect hover
		*/
		&-hide-other
			opacity 0.2
		&-show
			opacity 1
			


// Project
.Project
	padding 0 0 100px
	&-Header
		width 100%
		padding 120px 0 50px
		display inline-block
	&-Overlay
		display inline-block
		padding 0 10px
		position relative
		top -40px
		width 100%
		
			
	&-Step
		position relative
		padding-top 100px
		padding-bottom 50px
		&::before
			background grey_color_4
			content ''
			display block
			height 100px
			left 50%
			position absolute
			top -50px
			width 1px
			z-index 10
		&-Number
			font-size 4em
			font-weight 100
			line-height 1
			margin -10px 0 0
			text-align center
			color grey_color_4
		&-Name
			text-transform uppercase
			font-weight 800
			text-align center
			margin -30px 0 0 
			
	&-Yustapos		
		position relative
		overflow hidden
		margin-top 50px
		&-col
			position absolute
			width 500px
			&.col-1
				top 0
				left -20%
			&.col-2
				top 100px
				left 10%
			&.col-3
				top 200px
				left 40%
	&-Icon
		max-width 100px
		margin 30px 0 0
		&--footer
			margin 100px auto
	&-Footer
		padding 80px 0
		margin 50px auto
	
		

