.Hero
	position relative
	height 100vh
	display inline-block
	width 100%
	overflow hidden
	transition_all(.5s)
		
		
	&-lead
		font-size 36px
		font-weight 100
		margin 0
		margin-top 140px
		max-width 680px
		
	&-copy
		font-size 22px
		font-weight 600
		max-width 640px
		margin 0 0 100px
	&-cta 
		text-align center
	
		
@media only screen and (min-width : 610px) and (orientation: landscape) and (max-width : 910px)
	.Hero
		height auto
		min-height 450px
		padding-bottom 30px
		&-lead
			margin-top 100px
			font-size 38px
		&-copy
			font-size 30px
			margin 0 0 50px
			
@media only screen and (min-width : 610px) and (orientation: portrait)
	.Hero
		&-lead
			font-size 72px
			margin-top 150px
			
		&-copy
			font-size 48px
		&-cta 
			text-align left
			
@media only screen and (min-width : 910px)
	.Hero
		&-lead
			font-size 72px
			margin-top 150px
			
		&-copy
			font-size 48px
		&-cta 
			text-align left
			

			

@media only screen and (min-width : 1100px)
	.Hero
		height 100vh
		&-lead
			margin-top 200px
			max-width 100%
		
					

@media only screen and (min-width : 1400px)
	.Hero
		&-lead
			margin-top 300px

